        <activity android:name=".Notification" android:label ="A propos" />
        <activity android:name=".Video"  android:label ="Exemples en vidéo" />
        <activity android:name=".Resultat"  android:label ="Mes résultats" />
        <activity android:name=".Conseil"  android:label ="Conseils"/>
