<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.viki.vikiapplication.ChangerMDP">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:id="@+id/bt_valider_ChgerMDP"
        android:minWidth="250dp"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:background="#88dcdc"
        android:textSize="24sp"
        android:textStyle="bold"
        android:clickable="true"
        android:contextClickable="true"
        android:onClick="valider_chgerMdp_OnClick"
        android:layout_below="@+id/et_ChgerMDP_Confirmation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ancien mot de passe : "
        android:id="@+id/TV_ChgerMdp_AncienMDP"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textColor="#284051"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nouveau mot de passe : "
        android:id="@+id/tv_ChgerMdp_NewMdp"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textColor="#284051"
        android:layout_below="@+id/et_ChgerMdp_AncienMDP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmation : "
        android:id="@+id/tv_ChgerMdp_Confirmation"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textColor="#284051"
        android:layout_below="@+id/et_ChgerMdp_NewMDP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_ChgerMdp_AncienMDP"
        android:layout_below="@+id/TV_ChgerMdp_AncienMDP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#8e0000"
        android:layout_marginTop="0dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_ChgerMdp_NewMDP"
        android:layout_below="@+id/tv_ChgerMdp_NewMdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#8e0000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_ChgerMDP_Confirmation"
        android:layout_below="@+id/tv_ChgerMdp_Confirmation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:textColor="#8e0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nouveau mot de passe pour plus de sécurité"
        android:id="@+id/textView11"
        android:textColor="#8e0000"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
