<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.viki.vikiapplication.MdpOublie">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adesse email :"
        android:id="@+id/tv_mdpOublie_Email"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textColor="#284051"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_MdpO_email"
        android:minHeight="30dp"
        android:minWidth="350dp"
        android:layout_below="@+id/tv_mdpOublie_Email"
        android:layout_centerHorizontal="true"
        android:textColor="#8e0000"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date de naissance                   : "
        android:id="@+id/tv_MdpOublie_dateNaiss"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:layout_below="@+id/et_MdpO_email"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:textColor="#284051"
        android:layout_toStartOf="@+id/textView9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_MdpO_dateNais"
        android:minHeight="30dp"
        android:minWidth="350dp"
        android:password="false"
        android:foregroundTint="#0ba3f5"
        android:layout_below="@+id/tv_MdpOublie_dateNaiss"
        android:layout_centerHorizontal="true"
        android:textColor="#8e0000"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:id="@+id/button"
        android:minWidth="250dp"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:background="#88dcdc"
        android:textSize="24sp"
        android:textStyle="bold"
        android:clickable="true"
        android:contextClickable="true"
        android:onClick="btValMDPOonClik"
        android:layout_below="@+id/et_MdpO_dateNais"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="( JJMMAAAA )"
        android:id="@+id/textView9"
        android:textSize="15dp"
        android:layout_above="@+id/et_MdpO_dateNais"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_marginBottom="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Besoin d&apos;un nouveau mot de passe ?  "
        android:id="@+id/textView10"
        android:textColor="#8e0000"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
